{
  "name": "webterm",
  "version": "1.0.0",
  "description": "A terminal that runs on a browser engine.",
  "main": "src/main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "electron-rebuild": "node_modules/.bin/electron-rebuild.cmd",
    "build-win": "node_modules/.bin/electron-builder --win --x64",
    "build-linux": "node_modules/.bin/electron-builder --linux --x64",
    "build-mac": "node_modules/.bin/electron-builder --mac --x64"
  },
  "keywords": [],
  "author": "Yamazaki Ryuki",
  "license": "ISC",
  "devDependencies": {
    "electron": "^13.1.1",
    "electron-builder": "^22.10.5",
    "electron-rebuild": "^2.3.5",
    "electron-tools": "^2.4.2"
  },
  "dependencies": {
    "ansi-colors": "^4.1.1",
    "ansi-to-html": "^0.6.15",
    "electron-store": "^8.0.0",
    "ffi-napi": "^4.0.3",
    "iconv-lite": "^0.6.3",
    "node-pty": "^0.10.1",
    "ref-napi": "^3.0.3",
    "ref-wchar-napi": "^1.0.3",
    "ssh2": "^1.1.0",
    "xterm": "^4.13.0",
    "xterm-addon-fit": "^0.5.0",
    "xterm-addon-web-links": "^0.4.0"
  },
  "build": {
    "productName": "WebTerm",
    "appId": "com.electron.ssh-client",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src",
      "package.json",
      "package-lock.json"
    ],
    "extraFiles": [ "nvdaControl.dll", "PCTKUSR.dll" ],
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis",
      "icon": "app-icon.ico"
    },
    "linux": {
      "target": "AppImage"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
